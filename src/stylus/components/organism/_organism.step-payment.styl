.o-step-payment
    &__header
        display flex
        justify-content space-between
        align-items center

        @media screen and (max-width: break-point-lg)
            flex-direction column
            align-items start

            .checkbox--header
                margin-top 20px

    &__form
        display flex
        margin-top 36px

        .input--form-payment
            width 100%

        &__step-2
            width 75%

        &__left
            flex 50%
    
        &__right
            flex 50%
            padding 0px 30px 0 60px
        
        @media screen and (max-width: break-point-lg)
            flex-wrap wrap
            padding-right 15px

            .input--form-payment
                width 98%

            &__left
                flex 100%
            &__right
                margin-top 10px
                flex 100%
                padding 0
            &__step-2
                width 100%
           
.o-step-payment-3
    height 100%
    display flex
    flex-direction column
    justify-content center
    align-items center
    text-align left