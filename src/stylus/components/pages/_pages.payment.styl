.p-payment
    &__summary
        display flex
        flex-direction column
        height 100%
        &__item
            flex 50%
        &__cost
            flex 50%
            display flex
            flex-direction column
            justify-content flex-end

        .payment--wrapper
            display flex
            flex-direction row
            justify-content space-between
            align-items center

            &__title
                font-size fs-14
                color black
            &__value
                font-size fs-14
                font-weight bold

            .big--title
                font-size fs-24
                font-weight bold
                color primary