.p-payment
    &__summary
        display flex
        flex-direction column
        height 100%
        &__item
            flex 50%

            &__shipment
                &::before
                    content ' '
                    display block
                    margin-top 22px
                    width 80px
                    height 1px
                    background-color #D8D8D8
                p
                    margin 0
                .text--regular
                    margin-top 21px 
        &__cost
            flex 50%
            display flex
            flex-direction column
            justify-content flex-end

        .payment--wrapper
            display flex
            flex-direction row
            justify-content space-between
            align-items center

            &__title
                font-size fs-14
                color black
            &__value
                font-size fs-14
                font-weight bold

            .big--title
                font-size fs-24
                font-weight bold
                color primary